{% extends 'base.html.twig' %}
{% block body %}
    <h2>Cart</h2>
    <div style="text-align:right">
        <a href="{{ path('cart_fill') }}">Fill cart</a> &bullet; <a href="{{ path('cart_reset') }}">Reset cart</a>
    </div>
    {% if error is defined %}
        <p>Error: {{ error }}</p>
    {% endif %}
    {% include 'commerce/reuseable/cart.html.twig' with { 'quote': data.quote, 'payments': data.payments.authorizedPayments } only %}
    {% if error is not defined %}
    <p>
        <a href="{{ continue }}">Continue to #{{ step_name }}</a>
    </p>
    {% endif %}
{% endblock %}
